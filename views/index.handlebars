<ul>
    {{#each burgers}} 
    {{#unless devoured}} 
    {{> burgers devoured=true}} 
    {{/unless}} 
    {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
    {{#each burgers}} {{#if devoured}} {{> burgers devoured=false}} {{/if}} {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burger">Burger Name</label>
        <br>
        <input type="text" id="burger" name="burger_name">
    </div>
    <button type="submit">submit</button>
</form>